{
    "name": "duroom/bbcode",
    "description": "Allow posts to be formatted with BBCode.",
    "type": "duroom-extension",
    "keywords": [
        "formatting"
    ],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/DuRoom/core/issues",
        "source": "https://github.com/DuRoom/bbcode",
        "forum": "https://discuss-duroom.js.org"
    },
    "homepage": "https://duroom.js.org",
    "require": {
        "duroom/core": "^1.2"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        },
        "duroom-extension": {
            "title": "BBCode",
            "category": "feature",
            "icon": {
                "name": "fas fa-bold",
                "backgroundColor": "#238C59",
                "color": "#fff"
            }
        },
        "duroom-cli": {
            "modules": {
                "admin": false,
                "forum": false,
                "js": false,
                "jsCommon": false,
                "css": false,
                "gitConf": true,
                "githubActions": false,
                "prettier": false,
                "typescript": false,
                "bundlewatch": false,
                "backendTesting": false,
                "editorConfig": true,
                "styleci": true
            }
        }
    }
}
